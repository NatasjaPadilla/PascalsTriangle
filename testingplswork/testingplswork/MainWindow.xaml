<Window x:Class="testingplswork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testingplswork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="displayGrid">
        <Label Content="Desired Height: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTriangle" HorizontalAlignment="Left" Height="22" Margin="110,12,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" ToolTip="This will determine the number of rows your program will generate."/>
        <Button x:Name="btnGenerate" Content="Generate" HorizontalAlignment="Left" Margin="145,13,0,0" VerticalAlignment="Top" Width="75" Click="btnGenerate_Click"/>
    </Grid>
</Window>
